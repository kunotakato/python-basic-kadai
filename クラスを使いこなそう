        "class Human():\n",
        "  def __init__(self,name,age):\n",
        "    # 属性を定義する\n",
        "    self.name = name\n",
        "    self.age =  age\n",
        "\n",
        "  # printinfoメソッドを定義\n",
        "  def printinfo(self):\n",
        "      print(self.name)\n",
        "      print(self.age)\n",
        "\n",
        "#インスタンス化\n",
        "human = Human(\"侍太郎\",25)\n",
        "\n",
        "# printinfoメソッドにアクセスし、値を出力\n",
        "human.printinfo()"
      ]
